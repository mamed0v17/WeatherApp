<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/weatherFragment"
        android:name="kg.geektech.weatherapp.ui.weather.WeatherFragment"
        android:label="fragment_weather"
        tools:layout="@layout/fragment_weather" >
        <action
            android:id="@+id/action_weatherFragment_to_searchFragment"
            app:destination="@id/searchFragment"/>
            <argument
                app:argType="string"
                android:name="city"
                android:defaultValue="Bishkek"
                app:nullable="true"/>


    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="kg.geektech.weatherapp.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" >
            <argument
                app:argType="string"
                android:name="city"
                app:nullable="true"/>
        </action>

    </fragment>
</navigation>